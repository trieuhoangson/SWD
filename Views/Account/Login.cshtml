@{
    ViewData["Title"] = "Login";
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<style>
    /* ===== Auth Standalone Styles (no CDN needed) ===== */
    .auth-bg {
        min-height: calc(100vh - 120px);
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg,#4f46e5 0%, #06b6d4 100%);
        padding: 32px 16px;
        font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", "Liberation Sans";
    }

    .auth-card {
        width: 100%;
        max-width: 460px;
        background: rgba(255,255,255,.10);
        border: 1px solid rgba(255,255,255,.25);
        border-radius: 18px;
        backdrop-filter: blur(10px);
        box-shadow: 0 20px 40px rgba(0,0,0,.25);
        color: #fff;
        padding: 28px;
    }

    .auth-title {
        margin: 8px 0 4px;
        font-weight: 700;
        font-size: 28px;
        text-align: center;
    }

    .auth-sub {
        color: rgba(255,255,255,.8);
        text-align: center;
        margin-bottom: 18px;
    }

    .badge-icon {
        width: 58px;
        height: 58px;
        border-radius: 14px;
        margin: 0 auto;
        display: grid;
        place-items: center;
        background: rgba(255,255,255,.15);
        border: 1px solid rgba(255,255,255,.25);
        font-size: 26px;
    }

    .form-row {
        margin-bottom: 14px;
    }

    .label {
        display: block;
        margin-bottom: 6px;
        color: rgba(255,255,255,.9);
        font-weight: 600;
        font-size: 14px;
    }

    .group {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .addon {
        flex: 0 0 auto;
        padding: 10px 12px;
        border-radius: 12px;
        background: rgba(255,255,255,.15);
        border: 1px solid rgba(255,255,255,.25);
    }

    .input {
        flex: 1 1 auto;
        padding: 11px 12px;
        border-radius: 12px;
        background: rgba(255,255,255,.12);
        border: 1px solid rgba(255,255,255,.25);
        outline: none;
        color: #fff;
    }

        .input::placeholder {
            color: rgba(255,255,255,.7);
        }

    .btn {
        width: 100%;
        padding: 12px 14px;
        border-radius: 12px;
        border: none;
        background: #22d3ee;
        color: #002;
        font-weight: 700;
        cursor: pointer;
        box-shadow: 0 8px 20px rgba(0,0,0,.15);
    }

        .btn:hover {
            filter: brightness(1.05);
        }

    .row-between {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 10px 0 16px;
    }

    .checkbox {
        display: flex;
        align-items: center;
        gap: 8px;
        color: rgba(255,255,255,.9);
    }

    .muted {
        color: rgba(255,255,255,.8);
        font-size: 14px;
    }

    .link {
        color: #fff;
        text-decoration: underline;
        font-weight: 600;
    }

    .alert {
        background: rgba(255, 86, 86, .2);
        border: 1px solid rgba(255,255,255,.25);
        padding: 10px 12px;
        border-radius: 12px;
        margin-bottom: 14px;
        color: #fff;
    }

    .icon-btn {
        padding: 10px 12px;
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,.25);
        background: rgba(255,255,255,.15);
        color: #fff;
        cursor: pointer;
    }
</style>

<div class="auth-bg">
    <div class="auth-card">
        <div class="badge-icon">📚</div>
        <div class="auth-title">Welcome back</div>
        <div class="auth-sub">Sign in to your library</div>

        @if (ViewBag.Error != null)
        {
            <div class="alert">@ViewBag.Error</div>
        }

        <form action="/Account/Login" method="post" id="loginForm" novalidate>
            <input type="hidden" name="returnUrl" value="@returnUrl" />

            <div class="form-row">
                <label class="label">Email</label>
                <div class="group">
                    <div class="addon">✉️</div>
                    <input class="input" name="email" type="email" placeholder="you@example.com" required />
                </div>
            </div>

            <div class="form-row">
                <label class="label">Password</label>
                <div class="group">
                    <div class="addon">🔒</div>
                    <input class="input" id="loginPwd" name="password" type="password" placeholder="••••••••" required />
                    <button type="button" class="icon-btn" id="toggleLoginPwd">👁️</button>
                </div>
            </div>

            <div class="row-between">
                <label class="checkbox">
                    <input type="checkbox" name="rememberMe" />
                    <span>Remember me</span>
                </label>
                <span class="muted">admin@library.com / 123456</span>
            </div>

            <button class="btn">Sign in</button>

            <div style="text-align:center;margin-top:12px;">
                <span class="muted">No account?</span>
                <a href="/Account/Register" class="link">Create one</a>
            </div>
        </form>
    </div>
</div>

<script>
    // very light client check
    document.getElementById('loginForm')?.addEventListener('submit', function(e){
      const email = this.querySelector('input[name="email"]');
      const pass = this.querySelector('input[name="password"]');
      if(!email.value || !pass.value){ e.preventDefault(); alert('Please fill email & password'); }
    });

    // toggle password
    document.getElementById('toggleLoginPwd')?.addEventListener('click', function(){
      const i = document.getElementById('loginPwd');
      i.type = i.type === 'password' ? 'text' : 'password';
      this.textContent = i.type === 'password' ? '👁️' : '🙈';
    });
</script>
