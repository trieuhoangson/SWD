@{
    ViewData["Title"] = "Register";
}

<style>
    /* dùng lại style như Login */
    .auth-bg {
        min-height: calc(100vh - 120px);
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg,#4f46e5 0%, #06b6d4 100%);
        padding: 32px 16px;
        font-family: system-ui, -apple-system, "Segoe UI", Roboto, Arial;
    }

    .auth-card {
        width: 100%;
        max-width: 520px;
        background: rgba(255,255,255,.10);
        border: 1px solid rgba(255,255,255,.25);
        border-radius: 18px;
        backdrop-filter: blur(10px);
        box-shadow: 0 20px 40px rgba(0,0,0,.25);
        color: #fff;
        padding: 28px;
    }

    .auth-title {
        margin: 8px 0 4px;
        font-weight: 700;
        font-size: 28px;
        text-align: center;
    }

    .auth-sub {
        color: rgba(255,255,255,.8);
        text-align: center;
        margin-bottom: 18px;
    }

    .badge-icon {
        width: 58px;
        height: 58px;
        border-radius: 14px;
        margin: 0 auto;
        display: grid;
        place-items: center;
        background: rgba(255,255,255,.15);
        border: 1px solid rgba(255,255,255,.25);
        font-size: 26px;
    }

    .form-row {
        margin-bottom: 14px;
    }

    .label {
        display: block;
        margin-bottom: 6px;
        color: rgba(255,255,255,.9);
        font-weight: 600;
        font-size: 14px;
    }

    .group {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .addon {
        flex: 0 0 auto;
        padding: 10px 12px;
        border-radius: 12px;
        background: rgba(255,255,255,.15);
        border: 1px solid rgba(255,255,255,.25);
    }

    .input {
        flex: 1 1 auto;
        padding: 11px 12px;
        border-radius: 12px;
        background: rgba(255,255,255,.12);
        border: 1px solid rgba(255,255,255,.25);
        outline: none;
        color: #fff;
    }

        .input::placeholder {
            color: rgba(255,255,255,.7);
        }

    .btn {
        width: 100%;
        padding: 12px 14px;
        border-radius: 12px;
        border: none;
        background: #22d3ee;
        color: #002;
        font-weight: 700;
        cursor: pointer;
        box-shadow: 0 8px 20px rgba(0,0,0,.15);
    }

        .btn:hover {
            filter: brightness(1.05);
        }

    .muted {
        color: rgba(255,255,255,.8);
        font-size: 14px;
    }

    .link {
        color: #fff;
        text-decoration: underline;
        font-weight: 600;
    }

    .alert {
        background: rgba(255, 86, 86, .2);
        border: 1px solid rgba(255,255,255,.25);
        padding: 10px 12px;
        border-radius: 12px;
        margin-bottom: 14px;
        color: #fff;
    }

    .icon-btn {
        padding: 10px 12px;
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,.25);
        background: rgba(255,255,255,.15);
        color: #fff;
        cursor: pointer;
    }
</style>

<div class="auth-bg">
    <div class="auth-card">
        <div class="badge-icon">✨</div>
        <div class="auth-title">Create account</div>
        <div class="auth-sub">Join the Library System</div>

        @if (ViewBag.Error != null)
        {
            <div class="alert">@ViewBag.Error</div>
        }

        <form action="/Account/Register" method="post" id="regForm" novalidate>
            <div class="form-row">
                <label class="label">Full name</label>
                <div class="group">
                    <div class="addon">👤</div>
                    <input class="input" name="fullName" placeholder="Nguyễn Văn A" required />
                </div>
            </div>

            <div class="form-row">
                <label class="label">Email</label>
                <div class="group">
                    <div class="addon">✉️</div>
                    <input class="input" name="email" type="email" placeholder="you@example.com" required />
                </div>
            </div>

            <div class="form-row">
                <label class="label">Password</label>
                <div class="group">
                    <div class="addon">🔒</div>
                    <input class="input" id="regPwd" name="password" type="password" placeholder="At least 4 characters" minlength="4" required />
                    <button type="button" class="icon-btn" id="toggleRegPwd">👁️</button>
                </div>
            </div>

            <button class="btn">Create account</button>

            <div style="text-align:center;margin-top:12px;">
                <span class="muted">Already have an account?</span>
                <a href="/Account/Login" class="link">Sign in</a>
            </div>
        </form>
    </div>
</div>

<script>
    document.getElementById('regForm')?.addEventListener('submit', function(e){
      const n = this.querySelector('input[name="fullName"]');
      const em = this.querySelector('input[name="email"]');
      const pw = this.querySelector('input[name="password"]');
      if(!n.value || !em.value || !pw.value){ e.preventDefault(); alert('Please fill all fields'); }
    });
    document.getElementById('toggleRegPwd')?.addEventListener('click', function(){
      const i = document.getElementById('regPwd');
      i.type = i.type === 'password' ? 'text' : 'password';
      this.textContent = i.type === 'password' ? '👁️' : '🙈';
    });
</script>
