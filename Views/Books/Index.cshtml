@{
    Layout = "_Layout";
}
@model IEnumerable<SWD.Models.Book>

@{
    ViewData["Title"] = "Book List";
    var search = ViewData["Search"] as string;
    var sort = ViewData["Sort"] as string;
}

<div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-gradient bg-primary text-white text-center rounded-top-4 py-3">
            <h2 class="fw-bold mb-0">📚 Book List</h2>
        </div>

        <div class="card-body p-4 bg-light rounded-bottom-4">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Error"]
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["Success"]
                </div>
            }

            <!-- 🔍 Search + Sort Form -->
            <form method="get" asp-action="Index" class="row g-3 mb-4">
                <div class="col-md-6">
                    <input type="text" name="search" value="@search" class="form-control shadow-sm"
                           placeholder="Search by title or author..." />
                </div>

                <div class="col-md-4">
                    <select name="sort" class="form-select shadow-sm">
                        <option value="">Sort by Title (A-Z)</option>
                        @if (sort == "title_desc")
                        {
                            <option value="title_desc" selected>Sort by Title (Z-A)</option>
                        }
                        else
                        {
                            <option value="title_desc">Sort by Title (Z-A)</option>
                        }
                        @if (sort == "year")
                        {
                            <option value="year" selected>Sort by Year</option>
                        }
                        else
                        {
                            <option value="year">Sort by Year</option>
                        }
                    </select>
                </div>

                <div class="col-md-2 text-end">
                    <button type="submit" class="btn btn-primary px-4 shadow-sm">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </form>

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center fs-5 shadow-sm mt-3">
                    No books available in the library.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-bordered align-middle bg-white shadow-sm rounded-3">
                        <thead class="table-primary text-center">
                            <tr>
                                <th>#</th>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Publisher</th>
                                <th>Year</th>
                                <th>Category</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int index = 1;
                            }
                            @foreach (var book in Model)
                            {
                                <tr>
                                    <td class="text-center fw-semibold">@index</td>
                                    <td class="fw-semibold">@book.Title</td>
                                    <td>@(book.Author ?? "N/A")</td>
                                    <td>@(book.Publisher ?? "N/A")</td>
                                    <td class="text-center">@book.PublicationYear</td>
                                    <td class="text-center">@book.Cat?.CatName</td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@book.BookId"
                                           class="btn btn-sm btn-outline-info me-2 shadow-sm">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        @if (book.Quantity > 0)
                                        {
                                            <button type="button" data-book-id="@book.BookId" class="btn btn-sm btn-outline-success shadow-sm js-borrow">
                                                <i class="bi bi-book"></i> Borrow
                                            </button>
                                        }
                                    </td>
                                </tr>
                                index++;
                            }
                        </tbody>
                    </table>
                </div>
            }

        </div>
    </div>
</div>

<!-- Borrow Confirmation Modal -->
<div class="modal fade" id="borrowModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Borrow</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-2">
                    <div class="col-6"><strong>Title:</strong> <span id="m-title"></span></div>
                    <div class="col-6"><strong>Author:</strong> <span id="m-author"></span></div>
                </div>
                <div class="row mb-2">
                    <div class="col-6"><strong>Publisher:</strong> <span id="m-publisher"></span></div>
                    <div class="col-3"><strong>Year:</strong> <span id="m-year"></span></div>
                    <div class="col-3"><strong>Category:</strong> <span id="m-category"></span></div>
                </div>
                <div class="alert alert-warning d-none" id="m-error"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="m-confirm">Confirm</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa, #e3f2fd);
            font-family: "Segoe UI", sans-serif;
        }

        .card {
            border-radius: 1rem;
        }

        table thead th {
            font-weight: 600;
            font-size: 15px;
        }

        table tbody td {
            font-size: 15px;
        }

        .table-hover tbody tr:hover {
            background-color: #f0f8ff !important;
            transition: 0.3s;
        }

        .badge {
            font-size: 0.85rem;
            border-radius: 0.75rem;
        }

        .btn {
            transition: all 0.2s ease-in-out;
        }

            .btn:hover {
                transform: scale(1.05);
            }

        .alert-info {
            border-left: 5px solid #0d6efd;
        }

        form .form-control, form .form-select {
            border-radius: 0.75rem;
        }
    </style>
}

@section Scripts {
    <script>
        (function () {
            let selectedBookId = null;
            const modalEl = document.getElementById('borrowModal');
            let modal;
            document.addEventListener('click', async function (e) {
                const btn = e.target.closest('.js-borrow');
                if (!btn) return;
                selectedBookId = btn.getAttribute('data-book-id');
                const res = await fetch(`/Books/BorrowCheck?id=${selectedBookId}`);
                const data = await res.json();
                if (!data.ok) {
                    alert(data.msg || 'Cannot borrow.');
                    return;
                }
                document.getElementById('m-title').textContent = data.book.title || '';
                document.getElementById('m-author').textContent = data.book.author || '';
                document.getElementById('m-publisher').textContent = data.book.publisher || '';
                document.getElementById('m-year').textContent = data.book.year || '';
                document.getElementById('m-category').textContent = data.book.category || '';
                document.getElementById('m-error').classList.add('d-none');
                modal = new bootstrap.Modal(modalEl);
                modal.show();
            });

            document.getElementById('m-confirm').addEventListener('click', async function () {
                if (!selectedBookId) return;
                const res = await fetch(`/Books/RequestBorrow?id=${selectedBookId}`, { method: 'POST' });
                const data = await res.json();
                if (!data.ok) {
                    const msgEl = document.getElementById('m-error');
                    msgEl.textContent = data.msg || 'Request failed.';
                    msgEl.classList.remove('d-none');
                    return;
                }
                if (modal) modal.hide();
                if (data.redirect) window.location.href = data.redirect;
            });
        })();
    </script>
}